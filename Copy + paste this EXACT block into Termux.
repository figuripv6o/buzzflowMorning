cat > scripts/buzzflow_morning.sh << 'EOF'
#!/usr/bin/env bash
CONFIG_FILE="config/routine.yml"
divider(){ printf '%*s\n' "${COLUMNS:-60}" '' | tr ' ' '-'; }
header(){ divider; echo "ðŸŒ… BuzzFlow Morning â€“ FDF Certifiedâ„¢"; divider; echo; }
check_config(){ [ ! -f "$CONFIG_FILE" ] && echo "âš ï¸ Missing config file." && exit 1; }
print_affirmations(){ echo "âœ¨ Affirmations"; divider;
awk '
  $1=="affirmations:"{a=1;next}
  a&&$1~/^-/{sub(/^- */,"");print "â€¢ "$0}
  a&&NF==0{a=0}
' "$CONFIG_FILE"; echo; }
print_blocks(){ echo "ðŸ§© Today'\''s Blocks"; divider;
awk '
  $1=="-"&&/id:/{next}
  /label:/{sub(/label:[ ]*/,"");label=$0}
  /action:/{sub(/action:[ ]*/,"");printf "â–ª %s\n   â†’ %s\n\n",label,$0}
' "$CONFIG_FILE"; }
footer(){ divider; echo "âœ… BuzzFlow Morning loaded. Move with intention."; echo; }
main(){ header; check_config; print_affirmations; print_blocks; footer; }
main
EOF
