cat > .github/workflows/buzzflow-morning.yml << 'EOF'
name: BuzzFlow Morning CI
on: { push: { branches: [ "main", "master" ] }, pull_request: {} }
jobs:
  run:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - run: bash -n scripts/buzzflow_morning.sh
      - run: chmod +x scripts/buzzflow_morning.sh && ./scripts/buzzflow_morning.sh
EOF

